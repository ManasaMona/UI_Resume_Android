<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.sowjanya.resumeui.MainActivity">
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name : " />
                <TextView
                    android:id="@+id/designation"
                    android:layout_below="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designation" />
                <TextView
                    android:id="@+id/yoe"
                    android:layout_below="@+id/designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Years of Experience" />
                <TextView
                    android:id="@+id/phno"
                    android:layout_below="@+id/yoe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone No:" />
            </LinearLayout>
            <ImageView
                android:src="@mipmap/ic_launcher"
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right" />
        </FrameLayout>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:layout_below="@+id/line1"
        android:id="@+id/skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Skills"/>
        //gridLayout
        <GridLayout
            android:id="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_below="@+id/skills"
            android:layout_alignLeft="@+id/tt"
            android:layout_alignStart="@+id/tt">
            <TextView
                android:id="@+id/c"
                android:layout_row="0"
                android:layout_column="0"
                android:text="C" />
            <TextView
                android:id="@+id/java"
                android:layout_row="0"
                android:layout_column="1"
                android:text="JAVA" />
             <TextView
                android:id="@+id/android"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Android"/>
            <TextView
                android:id="@+id/webser"
                android:layout_row="1"
                android:layout_column="1"
                android:text="Web Services" />
            <TextView
                android:id="@+id/oc"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Objective C"/>

            <!--<EditText-->
                <!--android:id="@+id/et1"-->
                <!--android:layout_row="2"-->
                <!--android:layout_column="1"-->
                <!--android:layout_width="180dp"-->
                <!--android:layout_height="21dp" />-->
        </GridLayout>
        <View
            android:layout_below="@+id/grid"
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_below="@+id/line2"
            android:id="@+id/p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project-1"/>
        <TextView
            android:layout_below="@+id/p1"
            android:id="@+id/tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Title "/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:id="@+id/editText"
            android:layout_alignBottom="@+id/tt"
            android:layout_toEndOf="@+id/tt"
            android:layout_alignTop="@+id/tt"
            android:layout_toRightOf="@+id/sumary" />

        <TextView
            android:layout_below="@+id/tt"
            android:id="@+id/sumary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Summary"/>

        <EditText
            android:layout_below="@+id/sumary"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="80dp"
            android:id="@+id/editText3" />



        <TextView
            android:layout_below="@+id/editText3"
            android:id="@+id/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project-2"/>
        <TextView
            android:layout_below="@+id/p2"
            android:id="@+id/tt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Title "/>

        <TextView
            android:layout_below="@+id/tt2"
            android:id="@+id/sumary2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Summary"/>

        <EditText
            android:layout_below="@+id/sumary2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="80dp"
            android:id="@+id/editText4" />

        <Button
            android:text="SAVE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/save" />


    </RelativeLayout>
</ScrollView>
